{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node"],

    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@store/*": ["src/store/*"],
      "@storeCurrencyRate/*": ["src/store/currency-rate/*"],
      "@selectors/*": ["src/components/redux/selectors/*"],
      "@helpers/*": ["src/helpers/*"],
      "@footer/*": ["src/components/footer/*"],
      "@header/*": ["src/components/header/*"],
      "@card/*": ["src/components/exchange-card/*"],
      "@custom-inputs/*": ["src/components/custom-inputs/*"],
      "@variables": ["src/helpers/_variables.scss"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
